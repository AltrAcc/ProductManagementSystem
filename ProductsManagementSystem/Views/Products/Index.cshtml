@model IEnumerable<ProductAddResponse>
@{
    // ViewBag.Title = "Parties";
}

<form asp-controller="Products" asp-action="Index" method="get">
    <h1>Products</h1>
    <a asp-controller="Products" asp-action="Create">Add Product</a>

    <table class="table w-100 mt">
        <thead>
            <tr>
                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                { "ColumnName", nameof(ProductAddResponse.ProductName) },
                { "DisplayName", "Product Name" },
                })

                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                { "ColumnName", nameof(ProductAddResponse.ProductDescription) },
                { "DisplayName", "Description" },
                })

                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                { "ColumnName", nameof(ProductAddResponse.ProductPrice) },
                { "DisplayName", "Product Price" },
                })

                <th>Options</th>

            </tr>
        </thead>
        <tbody>
            @foreach (ProductAddResponse product in Model)
            {
                <tr>
                    <td style="width:15%">@product.ProductName</td>
                    <td style="width:20%">@product.ProductDescription</td>
                    <td style="width:15%">@product.ProductPrice</td>

                    <td style="width:20%">
                        <a asp-controller="Product" asp-action="Edit" asp-route-productID="@product.ProductID">Edit</a>
                        @* /Product/Edit/1 *@

                        <a asp-controller="Product" asp-action="Delete" asp-route-productID="@product.ProductID">Delete</a>
                        @* /product/Delete/1 *@

                        <a asp-controller="Product" asp-action="Detail" asp-route-productID="@product.ProductID">Detail</a>
                        @* /productRates/Deatil/1*@
                    </td>
                </tr>
            }
            <tr></tr>
        </tbody>

    </table>

</form>

