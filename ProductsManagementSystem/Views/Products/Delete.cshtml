@model ProductAddResponse
@{
    ViewBag.Title = "Delete Produt";
}

<h1> Delete Product </h1>

<div class="center-box">
    <form asp-controller="Products" asp-action="Delete" method="post">

        @* Product ID (hidden) *@
        <input type="hidden" asp-for="ProductID" />

        @* Product Name *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="ProductName" class="form-label pt">Product Name</label>
            </div>
            <div class="flex-1">
                <input class="form-input" asp-for="ProductName" value="@Model.ProductName" readonly />
                <span asp-validation-for="ProductName" class="text-red"></span>
            </div>
        </div>

        @* Product Price *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="ProductPrice" class="form-label pt">Product Price</label>
            </div>
            <div class="flex-1">
                <input class="form-input" asp-for="ProductPrice" value="@Model.ProductPrice" readonly />
                <span asp-validation-for="ProductPrice" class="text-red"></span>
            </div>
        </div>

        @* Submit *@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button type="submit" class="button button-red-back">Delete</button>

                <div asp-validation-summary="All" class="text-red"></div>

                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>
