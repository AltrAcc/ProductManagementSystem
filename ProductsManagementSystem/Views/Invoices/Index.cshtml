@model IEnumerable<InvoiceResponse>
@{
    ViewBag.Title = "Invoices";
}

<h1>All Invoice</h1><br />


<table class="table w-100 mt" id="InvoiceTable">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>PartyName</th>
            <th>Total Product</th>
            <th>Total Bill</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.PartyName</td>
                <td>@invoice.ProductCount</td>
                <td>@invoice.Total</td>
                <td>
                    <a asp-action="Details" asp-controller="Invoices" asp-route-InvoiceId="@invoice.InvoiceId" class="btn styled-link-create">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#InvoiceTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                columnDefs: [
                    {
                        targets: -1,
                        searchable: false,
                        sortable: false
                    }
                ]
            });
        });
    </script>
}

