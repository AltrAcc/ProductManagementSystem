@model InvoiceResponse
@{
    ViewBag.Title = "Delete Invoice";
}

<h1> Delete Invoice </h1>

<div class="center-box">
    <form asp-controller="Invoices" asp-action="Delete" method="post">

        @* Invoice ID (hidden) *@
        <input type="hidden" asp-for="InvoiceId" />

        <h3>Are you sure want to delete Invoice?</h3>

        @* Delete *@
        <div class="form-field flex">
            <div class="w-50">
            </div>
            <div class="flex-1">
                <button type="submit" class="button button-red-back">Delete Invoice</button>

            </div>
        </div>

    </form>
</div>
