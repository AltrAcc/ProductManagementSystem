@model IEnumerable<InvoiceResponse>

@{
    ViewBag.Title = "Party Invoice";
}

<a asp-controller="Parties" asp-action="Index">Back to Parties</a>
<h1> Party Invoice </h1><br />

<table class="table w-100 mt" id="invoiceTable">
    <thead>
        <tr>
            <th>Invoice Id</th>
            <th>Invoice Date</th>
            <th>Party Name</th>
            <th>Total Product</th>
            <th>Billing Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.InvoiceDate.ToString("dd-mm-yyyy")</td>
                <td>@invoice.PartyName</td>
                <td>@invoice.ProductCount</td>
                <td>@invoice.Total</td>
                <td>
                    <a asp-action="Details" asp-controller="Invoices" asp-route-invoiceId="@invoice.InvoiceId" class="btn btn-outline-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#invoiceTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                columnDefs: [
                    {
                        targets: -1,
                        searchable: false,
                        sortable: false
                    }
                ]
            });
        });
    </script>
}
